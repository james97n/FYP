<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblur">

    <TextView
        android:layout_width="181dp"
        android:layout_height="43dp"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:text="Word: " />

    <TextView
        android:id="@+id/wordOfTheSaved"
        android:layout_width="308dp"
        android:layout_height="200dp"

        android:layout_centerHorizontal="true"
        android:background="@drawable/back"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="你好"
        android:textSize="50sp"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/meaningTitle"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_below="@+id/wordOfTheSaved"

        android:layout_marginStart="50dp"
        android:text="Meaning: "
        android:textSize="20sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/meaningOfTheWord"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meaningTitle"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:text="How are you?"
        android:textSize="30sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/exampleTitle"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_below="@+id/meaningOfTheWord"

        android:layout_marginStart="50dp"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/exampleOfTheWord"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exampleTitle"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:text=""
        android:textSize="30sp"
        android:layout_marginTop="10dp" />


</RelativeLayout>